{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PixelEye设计之眼",
  "version": "0.1.1",
  "identifier": "com.song.pixels",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PixelEye - 像素级对比工具",
        "width": 1020,
        "minWidth": 200,
        "height": 940,
        "minHeight": 150,
        "resizable": true,
        "alwaysOnTop": false,
        "decorations": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "macOSPrivateApi": true,
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "copyright": "Copyright © 2025 Song Yang",
    "shortDescription": "PixelEye设计之眼，洞见开发！专业的像素级设计稿对比工具",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "yangsong13"
  }
}
